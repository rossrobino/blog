---
import "../base.postcss";

const { title, description, keywords, author } = Astro.props;

function getCurrentDate() {
	const today = new Date();
	const dd = String(today.getDate()).padStart(2, "0");
	const mm = String(today.getMonth() + 1).padStart(2, "0");
	const yyyy = today.getFullYear();
	return yyyy + "-" + mm + "-" + dd;
}
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta
			property="og:image"
			content={`https://og.robino.dev/api/blog?title=${title}&desc=${description}&author=${author}`}
		/>
		<title>{title ? title : "blog.robino.dev"}</title>
	</head>
	<body>
		<div class="vp-dyn flex min-h-screen flex-col justify-between text-center">
			<div>
				<header>
					<h2 class="my-4 text-3xl text-neutral-900 md:text-5xl">
						<a class="p-4" href="/">blog.robino.dev</a>
					</h2>
				</header>
				<main class="md:flex md:justify-center">
					<article class="px-4 text-left sm:max-w-screen-md">
						<hr class="m-0" />
						<slot />
					</article>
				</main>
			</div>
			<footer class="flex justify-center py-2">
				<div
					class="flex w-full max-w-screen-md items-center justify-between gap-4 px-4"
				>
					<p>
						{getCurrentDate().split("-")[0]} -
						<a
							class="inline-block underline"
							href="https://robino.dev/"
							target="_blank"
							rel="noreferrer"
						>
							Ross Robino
						</a>
					</p>
					<a
						href="https://github.com/rossrobino/blog"
						target="_blank"
						rel="noreferrer"
					>
						<!-- GitHub Logo -->
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							width="32px"
